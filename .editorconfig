# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending for every file
# Indent with 4 spaces
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2

# Indent XML with tabs
[xml]
indent_style = tab

[sass]
indent_size = 2

[css]
indent_size = 2
